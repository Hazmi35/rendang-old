{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "indent": [true, "spaces", 2],
    "semicolon": [true, "always"],
    "ordered-imports": false,
    "align": false,
    "quotemark": [true, "double", "avoid-escape", "avoid-template"],
    "array-type": false,
    "no-empty": false,
    "interface-name": false,
    "ban-types": true,
    "no-shadowed-variable": false,
    "object-literal-sort-keys": false,
    "radix": false,
    "no-console": false
  }
}